{
  "name": "@isardsat/tri",
  "version": "1.13.0",
  "author": "Lobelia",
  "license": "MIT",
  "description": "Powerful configuration file processor",
  "keywords": [
    "configuration",
    "yaml",
    "csv"
  ],
  "homepage": "https://github.com/lobelia-earth/tri",
  "bugs": {
    "url": "https://github.com/lobelia-earth/tri/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lobelia-earth/tri.git"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "require": "./lib/cjs/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "main": "lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn clean && tsc && tsc -p tsconfig.cjs.json",
    "build:watch": "yarn clean && tsc --watch & tsc --watch -p tsconfig.cjs.json",
    "clean": "rm -r lib",
    "lint": "eslint",
    "prettier": "prettier --write .",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "typecheck": "tsc --pretty --noEmit",
    "xxl": "xxl --src src --exclude /coverage/"
  },
  "dependencies": {
    "mustache": "^4.0.1",
    "papaparse": "^5.3.2",
    "timm": "^1.6.2",
    "yaml": "^2.6.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.16.0",
    "@types/mustache": "^4.0.1",
    "@types/papaparse": "^5.3.15",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "globals": "^15.13.0",
    "oao": "^2.0.2",
    "prettier": "^3.4.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.17.0",
    "vitest": "^2.1.8",
    "xxl": "^1.3.0"
  },
  "volta": {
    "node": "22.11.0",
    "yarn": "1.22.22"
  }
}
